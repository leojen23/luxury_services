    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Company_name</th>
                <td>{{ client.companyName }}</td>
            </tr>
            <tr>
                <th>Activity</th>
                <td>{{ client.activity }}</td>
            </tr>
            <tr>
                <th>Contact_name</th>
                <td>{{ client.contactName }}</td>
            </tr>
            <tr>
                <th>Contact_position</th>
                <td>{{ client.contactPosition }}</td>
            </tr>
            <tr>
                <th>Phone</th>
