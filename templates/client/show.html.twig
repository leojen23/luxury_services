{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    
<!-- Page -->
    <div class="page">

        <!-- Page Header-->
        <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="white-text">Client respository</h2>
                        <span class="white-text">Personnal & Professionnal informations</span>
                        <ol class="breadcrumb">
                            <li><a href="#!">Home</a></li>
                            <li class="active">Client</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Company_name</th>
                <td>{{ client.companyName }}</td>
            </tr>
            <tr>
                <th>Activity</th>
                <td>{{ client.activity }}</td>
            </tr>
            <tr>
                <th>Contact_name</th>
                <td>{{ client.contactName }}</td>
            </tr>
            <tr>
                <th>Contact_position</th>
                <td>{{ client.contactPosition }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ client.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('client_index') }}">back to list</a>

    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
